#!/bin/bash
export ARCH=arm64
export SUBARCH=arm64
export CROSS_COMPILE="${HOME}/gcc-prebuilts/bin/aarch64-linux-gnu-"
export CC="${HOME}/clang/bin/clang"
export CLANG_TRIPLE="aarch64-linux-gnu-"
export KBUILD_COMPILER_STRING="Clang-7.0"

z2_plus(){
zipname="(z2_plus)Nameless Kernel[Treble] Rx.zip"
export KBUILD_BUILD_USER="z2_plus"
export KBUILD_BUILD_HOST="LibXZR"
make O=out mrproper&&make O=out z2_plus_defconfig&&make O=out -j16

cp -f out/arch/arm64/boot/Image.gz-dtb ~/AnyKernel2
cd ~/AnyKernel2
git checkout z2_plus_treble
zip -r "$zipname" *
cp -f "$zipname" ~
rm -f "$zipname"

}


z2_row(){
zipname="(z2_pro)Nameless Kernel[Treble] Rx.zip"
export KBUILD_BUILD_USER="z2_row"
export KBUILD_BUILD_HOST="LibXZR"
make O=out mrproper&&make O=out z2_row_defconfig&&make O=out -j16

cp -f out/arch/arm64/boot/Image.gz-dtb ~/AnyKernel2
cd ~/AnyKernel2
git checkout z2_plus_treble
zip -r "$zipname" *
cp -f "$zipname" ~
rm -f "$zipname"
}

if [ "$1" == z2_plus ]
then
z2_plus
fi

if [ "$1" == z2_row ]
then
z2_row
fi
